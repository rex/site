extends ../layout
block content

  h1.huge My GitHub Repositories
  .ui.small.feed.segment
    each repo in repos
      .event
        .label
          .ui.blue.label #{repo.stargazers_count}
          //- i.circular.github.icon
        .content
          .date #{_.age(repo.created_at)}
          .summary #{repo.name}
          .extra.text #{repo.description}