mixin instagram_item(item)
  .event
    .label
      i.circular.instagram.icon
    .content
      .date
        | #{_.age(parseInt(item.date) * 1000 )}
      .summary
        | #{me} uploaded a photo to Instagram
      .extra.text
        | #{item.caption}
      .extra.images
        img(src=item.image)

